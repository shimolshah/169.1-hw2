-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => @highlight_title}
        = link_to "Movie Title", movies_path({"sorted" => "title", "highlight" => "title_header"}), id: "title_header", class: "hilite"
      %th Rating
      %th{:class => @highlight_release_date}
        = link_to  "Release Date", movies_path({"sorted" => "date", "highlight" => "release_date_header"}), id: "release_date_header"

      %th Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
